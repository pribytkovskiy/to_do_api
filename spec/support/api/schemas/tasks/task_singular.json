{
  "id": "file:/task_singular.json#",
  "type": "object",
  "required": ["id", "type", "attributes", "relationships", "links"],
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "tasks" },
    "attributes": {
      "type": "object",
      "required": ["name", "deadline", "position"],
      "properties": {
        "name": { "type": "string" },
        "deadline": { "type": ["string", "null"] },
        "position": { "type": "integer" }
      }
    },
    "relationships": {
      "type": "object",
      "required": ["comments", "project"],
      "properties": {
        "tasks": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": {
              "type": "array",
              "items": { "$ref": "file:/comment_identifier_object#" }
            }
          }
        },
        "user": {
          "type": "object",
          "required": ["data"],
          "properties": {
            "data": { "$ref": "file:/project_identifier_object#" }
          }
        }
      }
    },
    "links": {
      "type": "object",
      "required": ["self"],
      "properties": {
        "self": { "type": "string" }
      }
    }
  }
}